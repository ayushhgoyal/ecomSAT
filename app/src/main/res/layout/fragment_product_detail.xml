<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="@dimen/margin_medium">

    <RelativeLayout
        android:id="@+id/container_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_added"
        android:layout_margin="@dimen/margin_normal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_size" />

        <TextView
            android:id="@+id/label_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: "
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Product Name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tv_date_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:text="TextView"
        android:textSize="@dimen/text_normal"
        tools:text="Added On" />

    <RelativeLayout
        android:id="@+id/container_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_size"
        android:layout_margin="@dimen/margin_normal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_color" />

        <TextView
            android:id="@+id/label_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: "
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_color"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Price: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/label_price"
        android:text="1000"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/label_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_price"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Tax: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tv_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/label_tax"
        android:text="4%"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/label_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_tax"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Total: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/label_total_amount"
        android:text="1250"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/card_view_margin_normal"
        android:elevation="@dimen/card_view_elevation_normal"
        app:cardCornerRadius="@dimen/card_view_corner_radius_normal"
        app:contentPadding="@dimen/card_view_padding_normal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_product_variants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_margin_normal"
                android:text="Variants Available: 3"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_margin_normal"
                android:text="Product id: "
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_rank_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="@dimen/card_view_margin_normal"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_normal" />


    </android.support.v7.widget.CardView>
</RelativeLayout>
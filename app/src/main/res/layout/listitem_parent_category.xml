<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/divider"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/next" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_category_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/card_view_margin_normal"
        android:layout_toRightOf="@+id/divider"
        android:elevation="@dimen/card_view_elevation_normal"
        app:cardCornerRadius="@dimen/card_view_corner_radius_normal"
        app:contentPadding="@dimen/card_view_padding_normal">

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="@dimen/text_normal" />


    </android.support.v7.widget.CardView>
</RelativeLayout>
